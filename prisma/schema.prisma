generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id      Int    @id @default(autoincrement())
  like    Int    @db.Int
  status  Int    @db.TinyInt
  agent   String @db.VarChar(255)
  author  String @db.VarChar(255)
  name    String @db.VarChar(255)
  content String @db.VarChar(2046)
  origin  String @default("") @db.VarChar(255)
  target  String @default("") @db.VarChar(255)
}

model Post {
  id      Int    @id @default(autoincrement())
  like    Int    @db.Int
  status  Int    @db.TinyInt
  agent   String @db.VarChar(255)
  author  String @db.VarChar(255)
  name    String @db.VarChar(255)
  content String @db.VarChar(2046)
  origin  String @default("") @db.VarChar(255)
  target  String @default("") @db.VarChar(255)
}
